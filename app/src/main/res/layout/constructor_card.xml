<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:layout_margin="10dp"
    app:cardCornerRadius="30dp"
    app:cardElevation="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/constructorLogo"
            style="@style/number"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/constructor_mercedes"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/line"
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:layout_marginVertical="15dp"
            android:background="#055B53"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/constructorLogo"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/constructorName"
            style="@style/drivers_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mercedes"
            android:textColor="#055B53"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/line"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.125" />


        <ImageView
            android:id="@+id/flagDriver2"
            android:layout_width="25dp"
            android:layout_height="17dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="28dp"
            android:scaleType="centerCrop"
            android:src="@drawable/flag_uk"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/line"
            app:layout_constraintTop_toBottomOf="@+id/flagDriver1"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/driver1"
            style="@style/teamname_driversCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="56dp"
            android:text="Hamilton"
            app:layout_constraintStart_toEndOf="@+id/flagDriver1"
            app:layout_constraintTop_toBottomOf="@+id/constructorName" />

        <TextView
            android:id="@+id/driver2"
            style="@style/teamname_driversCard"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_marginBottom="20dp"
            android:text="Russel"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/flagDriver2" />

        <ImageView
            android:id="@+id/flagDriver1"
            android:layout_width="25dp"
            android:layout_height="17dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="56dp"
            android:scaleType="centerCrop"
            android:src="@drawable/flag_uk"
            app:layout_constraintStart_toEndOf="@+id/line"
            app:layout_constraintTop_toBottomOf="@+id/constructorName" />

        <ImageView
            android:id="@+id/carPhoto"
            android:layout_width="200dp"
            android:layout_height="171dp"
            android:layout_marginEnd="16dp"
            android:scaleType="fitCenter"
            android:src="@drawable/car_mercedes"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <ImageView
            android:id="@+id/redArrow"
            android:layout_width="17dp"
            android:layout_height="18dp"
            android:layout_marginEnd="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.505"
            app:srcCompat="@drawable/mix_arrow_forward_f1red" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>