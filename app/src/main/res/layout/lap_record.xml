<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="28dp"
    android:layout_marginTop="16dp"
    android:background="@drawable/infos_border"
    android:orientation="vertical"
    android:padding="5dp"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/standingInfo">

    <TextView
        android:id="@+id/lap_record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lap_record_title" />

    <TextView
        style="@style/circuitInfos"
        android:id="@+id/lap_record_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7dp" />

    <TextView
        android:id="@+id/lap_record_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>