<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TitlesFontStyle" >
        <item name="android:fontFamily">@font/fredoka_one</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginStart">16sp</item>
        <item name="android:layout_marginTop">16sp</item>
    </style>

    <style name="mainTitles" >
        <item name="android:fontFamily">@font/fredoka_one</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="mainCardStyle">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
    </style>

    
    <style name="number">
        <item name="android:fontFamily">@font/fredoka_one</item>
        <item name="android:textSize">40sp</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="drivers_name">
        <item name="android:fontFamily">@font/fredoka_one</item>
        <item name="android:textSize">30sp</item>
        <item name="android:paddingStart">5dp</item>
    </style>

    <style name="teamname_driversCard">
        <item name="android:fontFamily">@font/fredoka_one</item>
        <item name="android:textSize">15sp</item>
        <item name="android:paddingStart">3dp</item>
    </style>

    <style name="pts_style">
        <item name="android:fontFamily">@font/fredoka_one</item>
        <item name="android:textSize">20sp</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>