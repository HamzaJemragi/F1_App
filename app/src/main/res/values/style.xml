<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TitlesFontStyle" >
        <item name="android:fontFamily">@font/formula1_wide</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <style name="RacingCardsDate" >
        <item name="android:fontFamily">@font/formula1_regular_1</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="RacingCardsMonth" >
        <item name="android:fontFamily">@font/formula1_bold_web</item>
        <item name="android:textSize">7sp</item>
        <item name="android:textColor">@color/lightgray</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
    </style>

    <style name="RacingCardsLocation" >
        <item name="android:fontFamily">@font/formula1_bold_web</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="mainTitles" >
        <item name="android:fontFamily">@font/formula1_bold_web</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="mainCardStyle">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="BottomNavigation.ActiveItemTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:lineSpacingExtra">15dp</item>
        <item name="android:fontFamily">@font/formula1_bold_web</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BottomNavigation.InactiveItemTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:lineSpacingExtra">15dp</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="BottomNavigation.itemActiveIndicatorStyle">
        <item name="color">@color/white</item>
    </style>

    <style name="circuitInfos">
        <item name="android:fontFamily">@font/formula1_bold_4</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="scheduleTitle">
        <item name="android:fontFamily">@font/formula1_bold_4</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="regular_bold_black">
        <item name="android:fontFamily">@font/formula1_black</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="regular_bold_white">
        <item name="android:fontFamily">@font/formula1_black</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="headerFont">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="rolexNumbers">
        <item name="android:fontFamily">@font/formula1_regular_1</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    
    <style name="number">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/formula1_regular_1</item>
        <item name="android:textSize">40sp</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="drivers_name">
        <item name="android:fontFamily">@font/formula1_regular_1</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">25sp</item>
        <item name="android:paddingStart">5dp</item>
    </style>

    <style name="constructor_name">
        <item name="android:fontFamily">@font/formula1_regular_1</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:paddingStart">5dp</item>
    </style>

    <style name="teamname_driversCard">
        <item name="android:fontFamily">@font/formula1_regular_1</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15sp</item>
        <item name="android:paddingStart">3dp</item>
    </style>

    <style name="driverame_constructorInfo">
        <item name="android:fontFamily">@font/formula1_regular_1</item>
        <item name="android:textSize">20sp</item>
        <item name="android:paddingStart">5dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="teamname_constructorInfo">
        <item name="android:fontFamily">@font/formula1_regular_1</item>
        <item name="android:textSize">20sp</item>
        <item name="android:paddingStart">3dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="toolbar_text">
        <item name="android:textSize">25sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="pts_style">
        <item name="android:fontFamily">@font/formula1_regular_1</item>
        <item name="android:textSize">20sp</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="bio">
        <item name="android:fontFamily">@font/formula1_regular_1</item>
        <item name="android:textSize">12sp</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="infoText">
        <item name="android:fontFamily">@font/formula1_regular_1</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="infoNumbers">
        <item name="android:fontFamily">@font/formula1_bold_4</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
    </style>



    <!-- FOR TEST -->
    <style name="BottomNavigation" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconTint">@color/f1red</item>
        <item name="itemTextColor">@color/f1red</item>
    </style>


</resources>